{
  "name": "barayuda-web-id",
  "description": "personal website",
  "version": "1.2.1",
  "private": true,
  "author": {
    "name": "Barayuda Gautama <saya.bara@gmail.com>"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "static": "next build && next export && touch ./out/.nojekyll && echo 'barayuda.web.id' > ./out/CNAME",
    "serve-static": "serve out",
    "deploy": "gh-pages -d out -t true",
    "postbuild": "next-on-netlify",
    "export": "next export"
  },
  "dependencies": {
    "next": "^10.0.5",
    "next-on-netlify": "^2.8.4",
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "devDependencies": {
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "gh-pages": "^2.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "react-safe": "^1.3.0",
    "serve": "^11.3.0",
    "tailwindcss": "^1.9.6"
  },
  "prettier": {
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.{json,yml,yaml,md,scss,css}": [
      "prettier --write"
    ]
  }
}
